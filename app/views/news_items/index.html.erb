<div class="container">
  <h1>News Items</h1>

  <table id="view-index" class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Types</th>
        <th>Date</th>
        <th>Title</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @news_items.order("posted_date ASC").each do |news_item| %>
        <tr>
          <td><%= news_item.display_types %></td>
          <td><%= news_item.posted_date.strftime('%B %d, %Y') %></td>
          <td><%= news_item.title %></td>
          <td>
            <%= link_to 'Change', edit_news_item_path(news_item), class: "badge badge-primary" %>
            <%= link_to 'Delete', news_item,
              data: {:confirm => 'Are you sure?'}, :method => :delete, class: "badge badge-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New News Item', new_news_item_path, class: 'btn btn-primary' %>
</div>
