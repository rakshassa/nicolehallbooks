<div class="container justify-content-center p-4">
  <%= form_tag(validate_sessions_path, :method => "post") do %>
    <div class="row">
    	<%= text_field_tag :name %>
    </div>
    <div class="row">
    	<%= password_field_tag :secret %>
    </div>

    <div>
    	<%= submit_tag "Login", :class => 'btn btn-large btn-primary' %>
    </div>
  <% end %>
</div>
